<% provide :title, t("meta_tags.processes.title") %>
<% provide :meta_description, t("meta_tags.processes.description") %>
<% provide :tracking_page_number, "32" %>
<% content_for :canonical do %>
  <%= render "shared/canonical", href: processes_url %>
<% end %>

<div class="expanded processes no-margin-top <%= css_for_human_rights_phase("accepting") %>">
  <div class="row padding">
    <div class="small-12 column">
      <h1 class="margin-bottom">
        <%= t("pages.processes.index.title") %>
      </h1>
      <!-- PROCESO DESTACADO <h2 class="label"><%# t("pages.processes.index.featured") %></h2> -->
    </div>
  </div>
</div>

<div class="processes-list padding">

  <div class="row">
    <div class="small-12 medium-3 column">
      <ul class="tabs vertical" id="processes-tab" data-tabs role="tablist">
        <li class="tabs-title">
          <a href="#panel1v" role="tab">
            <%= t("pages.processes.menu.open") %>
          </a>
        </li>
        <li class="tabs-title">
          <a href="#panel2v" role="tab">
            <%= t("pages.processes.menu.coming_soon") %>
          </a>
        </li>
        <li class="tabs-title is-active">
          <a href="#panel3v" aria-selected="true" role="tab">
            <%= t("pages.processes.menu.finished") %>
          </a>
        </li>
      </ul>
    </div>

    <div class="small-12 medium-9 column">
      <div class="tabs-content vertical" data-tabs-content="processes-tab">

        <!-- Procesos abiertos -->
        <div class="tabs-panel" id="panel1v">
          <h2 class="sr-only"><%= t("pages.processes.menu.open") %></h2>

          <div class="callout primary">
            <small>En estos momentos no hay procesos abiertos.</small>
          </div>
        </div>

        <!-- Procesos próximamente -->
        <div class="tabs-panel" id="panel2v">
          <h2 class="sr-only"><%= t("pages.processes.menu.coming_soon") %></h2>

          <div class="callout primary">
            <small>No hay procesos próximamente.</small>
          </div>
        </div>

        <!-- Procesos terminados -->
        <div class="tabs-panel is-active" id="panel3v">
          <h2 class="sr-only"><%= t("pages.processes.menu.finished") %></h2>

          <!-- Publicidad exterior -->
          <div class="panel">
            <h3><%= t("pages.processes.index.process_17_title") %></h3>
            <p><%= t("pages.processes.index.process_17_description") %></p>
            <%= link_to t("pages.processes.index.process_17_button"), publicity_path, class: "button hollow" %>
          </div>

          <!-- Villaverde -->
          <div class="panel">
            <h3><%= t("pages.processes.index.process_19_title") %></h3>
            <p><%= t("pages.processes.index.process_19_description") %></p>
            <%= link_to t("pages.processes.index.process_19_button"), villaverde_path, class: "button hollow" %>
          </div>

          <!-- Vicálvaro -->
          <div class="panel">
            <h3><%= t("pages.processes.index.process_18_title") %></h3>
            <p><%= t("pages.processes.index.process_18_description") %></p>
            <%= link_to t("pages.processes.index.process_18_button"), vicalvaro_path, class: "button hollow" %>
          </div>

          <!-- Rehabilitación edificios -->
          <div class="panel">
            <h3><%= t("pages.processes.index.process_16_title") %></h3>
            <p><%= t("pages.processes.index.process_16_description") %></p>
            <%= link_to t("pages.processes.index.process_16_button"), buildings_path, class: "button hollow" %>
          </div>

          <!-- Nueva Ordenanza Movilidad -->
          <div class="panel">
            <h3><%= t("pages.processes.index.process_15_title") %></h3>
