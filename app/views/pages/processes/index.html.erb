            <p><%= t("pages.processes.index.process_14_description") %></p>
            <%= link_to t("pages.processes.index.process_14_button"), linea_madrid_path, class: "button hollow" %>
          </div>

          <!-- Remodelación de Plaza España -->
          <div class="panel">
            <h3><%= t("pages.processes.index.process_2_title") %></h3>
            <p><%= t("pages.processes.index.process_2_description_close") %></p>
